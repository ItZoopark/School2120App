<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.menu.MenuDetailFragment">

    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/imgvMenuFile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMenuName" />

    <TextView
        android:id="@+id/tvMenuName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:textAlignment="center"
        android:textColor="@color/blue_black"
        android:textSize="@dimen/header_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnDownloadMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        app:backgroundTint="@color/blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_download"
        app:tint="@color/white" />

    <ProgressBar
        android:id="@+id/pbMenuDownloading"
        style="?android:attr/progressBarStyle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:indeterminateTint="@color/blue_dark"
        app:layout_constraintBottom_toBottomOf="@+id/imgvMenuFile"
        app:layout_constraintEnd_toEndOf="@+id/imgvMenuFile"
        app:layout_constraintStart_toStartOf="@+id/imgvMenuFile"
        app:layout_constraintTop_toTopOf="@+id/imgvMenuFile" />

    <ImageView
        android:id="@+id/zoomMenuPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#20000000"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgvMenuFile"
        app:layout_constraintEnd_toEndOf="@+id/imgvMenuFile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/imgvMenuFile"
        app:layout_constraintTop_toTopOf="@+id/imgvMenuFile"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/icon_zoom_touch" />

</androidx.constraintlayout.widget.ConstraintLayout>